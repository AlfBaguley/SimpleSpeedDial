<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:alpha="1"
    android:animateLayoutChanges="true"
    android:background="@drawable/ssda"
    android:backgroundTintMode="screen"
    android:contextClickable="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingEnd="100dp"
    android:paddingLeft="@dimen/abc_text_size_medium_material"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingStart="5dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:visibility="visible"
    tools:context="com.AlfsApps.SimpleSpeedDialler.SettingsActivity">

    <TextView
        android:id="@+id/PhoneListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/SpnChooseSpeedDialNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"
        android:text="@string/PhoneList"
        android:textColor="#8cffffff"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/lblContactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ContactName"
        android:shadowColor="#0123"
        android:text="@string/lblContactName"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lblContactNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ContactNumber"

        android:text="@string/lblContactNumber"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/ContactName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="98dp"
        android:alpha="1"
        android:background="@android:color/black"
        android:contentDescription="@string/type_contacts_name_here"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:text="@string/type_contacts_name_here"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/ContactNumber"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/lblContactName"
        android:layout_alignLeft="@+id/ContactName"
        android:layout_marginBottom="14dp"
        android:width="3dp"
        android:alpha="1"
        android:background="@android:color/black"
        android:contentDescription="@string/type_phone_number_here"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fadingEdge="none"
        android:inputType="phone"
        android:padding="10dp"
        android:text="@string/type_phone_number_here"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/lblSpeedDialNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lblContactNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignWithParentIfMissing="false"
        android:layout_marginBottom="35dp"
        android:layout_toLeftOf="@+id/SpnChooseSpeedDialNumber"
        android:layout_toStartOf="@+id/SpnChooseSpeedDialNumber"
        android:alpha="1"
        android:text="@string/lblSpeedDialNumber"
        android:textSize="12sp" />

    <Spinner
        android:id="@+id/SpnChooseSpeedDialNumber"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/lblSpeedDialNumber"
        android:alpha="0.2"
        android:alwaysDrawnWithCache="true"
        android:background="#fff7fc"
        android:clickable="false"
        android:contextClickable="false"
        android:dropDownSelector="#6010ff"
        android:dropDownWidth="200dp"
        android:entries="@array/speed_dials"
        android:focusableInTouchMode="true"
        android:foreground="#fffa6e"
        android:foregroundGravity="top"
        android:spinnerMode="dropdown"
        tools:ignore="RtlCompat" />

</RelativeLayout>