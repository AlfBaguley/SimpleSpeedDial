<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:alpha="1"
    android:animateLayoutChanges="true"
    android:background="@drawable/ssda"
    android:backgroundTintMode="screen"
    android:visibility="visible">

    <TextView
        android:id="@+id/PhoneListView"
        android:layout_width="355dp"
        android:layout_height="52dp"
        android:textSize="42sp"
        android:text="@string/PhoneList"
        android:textColor="@android:color/black"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.504" />

    <TextView
        android:id="@+id/lblContactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblContactName"
        android:textSize="12sp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/ContactName"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/ContactName" />

    <TextView
        android:id="@+id/lblContactNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblContactNumber"
        android:textSize="12sp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/ContactNumber"
        app:layout_constraintLeft_toLeftOf="@+id/ContactNumber" />


    <EditText
        android:id="@+id/ContactNumber"
        android:layout_width="350dp"
        android:layout_height="44dp"
        android:width="3dp"
        android:alpha="1"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:contentDescription="@string/type_phone_number_here"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fadingEdge="none"
        android:inputType="phone"
        android:padding="10dp"
        android:text="@string/type_phone_number_here"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="31dp"
        app:layout_constraintBottom_toTopOf="@+id/lblContactName" />

    <EditText
        android:id="@+id/ContactName"
        android:layout_width="350dp"
        android:layout_height="44dp"
        android:layout_marginBottom="8dp"
        android:width="3dp"
        android:alpha="1"
        android:background="@android:color/holo_blue_light"
        android:contentDescription="@string/type_contacts_name_here"
        android:drawablePadding="10dp"
        android:ems="10"
        android:padding="10dp"
        android:inputType="textPersonName"
        android:text="@string/type_contacts_name_here"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ContactNumber"
        app:layout_constraintVertical_bias="0.62"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/lblSpeedDialNumber"
        android:layout_width="180dp"
        android:layout_height="14dp"
        android:alpha="1"
        android:text="@string/lblSpeedDialNumber"
        android:textSize="12sp"


        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/PhoneListView"
        app:layout_constraintBottom_toTopOf="@+id/lblContactNumber"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/PhoneListView" />

    <Spinner
        android:id="@+id/SpnChooseSpeedDialNumber"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:alpha="1"
        android:alwaysDrawnWithCache="true"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_light"
        android:clickable="true"
        android:dropDownSelector="#6010ff"
        android:dropDownWidth="50dp"
        android:entries="@array/speed_dials"
        android:focusableInTouchMode="true"
        android:foreground="#fffa6e"
        android:foregroundGravity="top"
        android:spinnerMode="dropdown"
        android:textSize="12sp"
        tools:ignore="RtlCompat"
        app:layout_constraintRight_toRightOf="@+id/PhoneListView"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblSpeedDialNumber" />

</android.support.constraint.ConstraintLayout>